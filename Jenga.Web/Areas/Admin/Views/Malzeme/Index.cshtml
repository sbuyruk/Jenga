<div class="container shadow p-3">
    <div class="row">
        <div class="col ">
            <h4 class="text-primary text-start fw-bold">Malzeme Listesi</h4>
        </div>
        <div class="col text-end">
            <a asp-controller="Malzeme" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Yeni Malzeme Oluştur
            </a>

        </div>
    </div>
    <hr />
    <div class="pt-3">
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Malzeme</th>
                    <th>Cinsi</th>
                    <th>Markası</th>
                    <th>Modeli</th>
                    <th>Açıklama</th>
                    <th>Düzenle/Sil</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/malzeme.js"></script>
}

