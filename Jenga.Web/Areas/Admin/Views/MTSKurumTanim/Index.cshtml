<div class="container pt-3">
    <div class="row">
        <div class="col ">
            <h4 class="text-primary text-start fw-bold">Kurum Listesi</h4>
        </div>
        <div class="col text-end">
            <a asp-controller="MTSKurumTanim" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Yeni Kurum Oluştur
            </a>
        </div>
    </div>
    <hr />

    <div class="pt-3">
        <table id="tblData" class="table table-bordered table-striped table-sm small" style="width:100%">
            <thead>
                <tr>
                    <th>Kurum Adı</th>
                    <th>Kurum Kısa Adı</th>
                    <th>Açıklama</th>
                    <th>Düzenle/Sil</th>
                    <th>Kişiler</th>
                    <th>Görevler</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="OpenModalDiv" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Kurumdaki Personel</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label id="mtsKurumIdLbl">XX</label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/mtsKurumTanim.js"></script>
    <script>
        function OpenModal(mtsKurumId) {
            // $("#OpenModalDiv").modal({ backdrop: false });
            var myModal = document.getElementById('OpenModalDiv');
            // Open the modal
            var modal = new bootstrap.Modal(myModal);
            modal.show();
        }
        function OpenModal1(mtsKurumId) {
            $.ajax({
                url: '/MTSKurumTanim/YourAction', // Replace with your controller and action
                type: 'GET', // or 'POST' depending on your needs
                success: function (data) {
                    // Handle the response from the controller if needed
                    // Assuming your controller returns HTML content for the modal
                    $('#modalContent').html(data);

                    // Display the modal after the AJAX request is complete
                    var myModal = new bootstrap.Modal(document.getElementById('OpenModalDiv'));
