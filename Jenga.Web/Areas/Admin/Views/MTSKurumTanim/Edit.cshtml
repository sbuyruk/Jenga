                    <input asp-for="KisaAdi" class="form-control shadow" />
                    <label asp-for="KisaAdi" class="ms-2"></label>
                    <span asp-validation-for="KisaAdi" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Telefon1" class="form-control shadow" />
                        <label asp-for="Telefon1" class="ms-2"></label>
                        <span asp-validation-for="Telefon1" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="TelAciklama1" class="form-control shadow" />
                        <label asp-for="TelAciklama1" class="ms-2"></label>
                        <span asp-validation-for="TelAciklama1" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Telefon2" class="form-control shadow" />
                        <label asp-for="Telefon2" class="ms-2"></label>
