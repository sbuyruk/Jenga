@model Faaliyet
<div class="container shadow p-3">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="row pt-3">
            <div class="col ">
                <h4 class="text-primary text-start fw-bold">Kurum Düzenle</h4>
            </div>
        </div>
        <hr />
        <div class="">
            @*<div asp-validation-summary="All"></div>*@
            <div class="row">
                <div class="form-floating py-2 col-4">
                    <input asp-for="FaaliyetKonusu" class="form-control shadow fw-bold" />
                    <label asp-for="FaaliyetKonusu" class="ms-2"></label>
                    <span asp-validation-for="FaaliyetKonusu" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-4">
                    <input asp-for="FaaliyetAmaci" class="form-control shadow" type="number" />
                    <label asp-for="FaaliyetAmaci" class="ms-2"></label>
                    <span asp-validation-for="FaaliyetAmaci" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating py-2 col-12">
                <label asp-for="Aciklama"></label>
                <textarea asp-for="Aciklama" class="form-control" style="height:150px"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-2">
                    <button type="submit" class="btn btn-primary form-control">Güncelle</button>
                </div>
                <div class="col-2">
                    <a asp-controller="Faaliyet" asp-action="Index" class="btn btn-outline-primary border form-control">
                        Listeye Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
