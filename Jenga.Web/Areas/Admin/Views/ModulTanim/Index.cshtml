@model IEnumerable<ModulTanim>
@{
    ViewData["Title"] = "Index";
}

<div class="container shadow p-3">
    <div class="row">
        <div class="col ">
            <h4 class="text-primary text-start fw-bold">Program Modülleri Listesi</h4>
        </div>
        <div class="col text-end">
            <a asp-controller="ModulTanim" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Yeni Program Modülü Oluştur
            </a>
        </div>
    </div>
    <hr />
    <div class="pt-3">
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Program Adı</th>
                    <th>Webpart Adı</th>
                    <th>Açıklama</th>
                    <th>Düzenle/Sil</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/modulTanim.js"></script>
}