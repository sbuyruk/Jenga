@model ModelVM
<div class="container-sm shadow">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="row pt-3">
            <div class="col ">
                <h4 class="text-primary text-start fw-bold">Model Tanımlama</h4>
            </div>
        </div>
        <hr />
        <div class="border p-3 mt-4">
            <div asp-validation-summary="All"></div>
            <div class="row">
                <div class="col-8 mb-3">
                    <label asp-for="ModelTanim.Adi"></label>
                    <input asp-for="ModelTanim.Adi" class="form-control" />
                    <span asp-validation-for="ModelTanim.Adi" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="ModelTanim.MarkaTanimId"></label>
                    <select asp-for="ModelTanim.MarkaTanimId" asp-items="@Model.MarkaTanimList" class="form-select">
                        <option disabled selected>--Marka seçiniz--</option>
                    </select>
                    <span asp-validation-for="ModelTanim.MarkaTanimId" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="ModelTanim.Aciklama"></label>
                <textarea asp-for="ModelTanim.Aciklama" rows="2" class="form-control"></textarea>
                <span asp-validation-for="ModelTanim.Aciklama" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success" style="width=150px">Kaydet</button>
            <a asp-controller="ModelTanim" asp-action="Index" class="btn btn-secondary" style="width:150px">Listeye Dön</a>
        </div>
    </form>
</div>
@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
