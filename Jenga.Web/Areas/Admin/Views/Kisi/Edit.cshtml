                    </select>
                    <span asp-validation-for="Kisi.MTSUnvanTanimId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if ((@Model.MTSGorevi != null) && (@Model.MTSGorevi.Adi != null))
                    {
                        <label asp-for="MTSGorevi.Adi"></label>
                        <input asp-for="MTSGorevi.Adi" class="form-control" readonly />
                    }
                    else
                    {
                        <label>Görev</label>
                        <input class="form-control" readonly />
                    }

                </div>
                <div class="form-group">
                    <label asp-for="Kisi.EPosta"></label>
                    <input asp-for="Kisi.EPosta" type="" class="form-control" />
                </div>
                <div class="checkbox">
                    <label asp-for="Kisi.RandevuKisiti" class="control-label">Randevu Kısıtı </label>
                    <input asp-for="Kisi.RandevuKisiti" class="form-check" type="checkbox" />
                </div>
            </div>
            <div class="col-2 ">

                <div class="form-group">
                    <label asp-for="Kisi.Telefon1"></label>
                    <input asp-for="Kisi.Telefon1" class="form-control input-phone" placeholder="( _ _ _ ) _ _  _ _" />
                </div>
                <div class="form-group">
                    <label asp-for="Kisi.Telefon2"></label>
                    <input asp-for="Kisi.Telefon2" class="form-control input-phone" placeholder="( _ _ _ ) _ _  _ _" />
                </div>
                <div class="form-group">
                    <label asp-for="Kisi.Telefon3"></label>
                    <input asp-for="Kisi.Telefon3" type="text" class="form-control input-phone" placeholder="( _ _ _ ) _ _  _ _" />
                </div>
                <div class="form-group">
                    <label asp-for="Kisi.Ili">İl</label>
                    <select asp-for="Kisi.Ili" asp-items="@Model.IlList" class="form-select" id="ilId">
                        <option disabled selected>--İl seçiniz--</option>
                    </select>
                    <span asp-validation-for="Kisi.Ili" class="text-danger"></span>
                </div>
            </div>
            <div class="col-2 ">

