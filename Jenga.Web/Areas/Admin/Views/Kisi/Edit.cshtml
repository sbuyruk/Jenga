                </div>
                <div class="form-group">
                    <label asp-for="Kisi.TelAciklama3">Tel Açıklama 3</label>
                    <input asp-for="Kisi.TelAciklama3" type="text" class="form-control" />
                </div>

            </div>

        </div>
        <div class="row">
            <div class="col form-group">
                <label asp-for="Kisi.Adres"></label>
