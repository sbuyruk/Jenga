@model KisiVM
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="Kisi.Id" hidden />
    <div class="row pt-3">
        <div class="col ">
            <h4 class="text-primary text-start fw-bold">Ziyaretçi Girişi (Vakıf Dışı)</h4>
        </div>
    </div>
    <hr />
    <div class="container ">
        <div class="row">
            @*<div asp-validation-summary="All"></div>*@
            <div class="col-2 ">
