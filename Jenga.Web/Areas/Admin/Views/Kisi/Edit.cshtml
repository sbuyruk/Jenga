                    }

                </div>
                <div class="form-group">
                    <label asp-for="Kisi.MTSUnvanTanimId">MTSÜnvan</label>
                    <select asp-for="Kisi.MTSUnvanTanimId" asp-items="@Model.MTSUnvanTanimList" class="form-select" id="MTSUnvanTanimId">
