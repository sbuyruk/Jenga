<div class="container pt-3">
    <div class="row">
        <div class="col ">
            <h4 class="text-primary text-start fw-bold">MTS Kurum Görev Listesi</h4>
        </div>
        <div class="col text-end">
            <a asp-controller="MTSKurumGorev" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Yeni Görev Oluştur
            </a>
        </div>
    </div>
    <hr />
    <div class="pt-3">
        <table id="tblData" class="table table-bordered table-striped table-sm" style="width:100%">
            <thead>
                <tr>
                    <th>Adı Soyadı</th>
                    <th>Kurum</th>
                    <th>Görev</th>
                    <th>Başlama Tarihi</th>
                    <th>Görev Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/mtsKurumGorev.js"></script>
}