@model MalzemeHareketVM
<div class="container shadow p-3">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="MalzemeHareket.Id" hidden />
        <div class="row pt-3">
            <div class="col ">
                <h4 class="text-primary text-start fw-bold">Depoya Giren Anı Objesi Düzenleme</h4>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="mb-3 col-2">
                <div class="form-group">
                    <label asp-for="MalzemeHareket.IslemTipi" class="control-label"></label>
                    <input asp-for="MalzemeHareket.IslemTipi" class="form-control" />
                    <span asp-validation-for="MalzemeHareket.IslemTipi" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 col-2">
                <div class="form-group">
                    <label asp-for="MalzemeHareket.IslemTarihi" class="control-label"></label>
                    <input asp-for="MalzemeHareket.IslemTarihi" class="form-control" type="date" />
                    <span asp-validation-for="MalzemeHareket.IslemTarihi" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 col-1">
                <label asp-for="MalzemeHareket.GirisCikis"></label>

                <select asp-for="MalzemeHareket.GirisCikis" asp-items="@Model.GirisCikisList" class="form-select">
                    <option disabled selected>--Seçiniz--</option>
                </select>
                <span asp-validation-for="MalzemeHareket.GirisCikis" class="text-danger"></span>
            </div>

        </div>
        <div class="mb-3">
            <label asp-for="MalzemeHareket.Aciklama"></label>
            <textarea asp-for="MalzemeHareket.Aciklama" rows="3" class="form-control"></textarea>
            <span asp-validation-for="MalzemeHareket.Aciklama" class="text-danger"></span>
        </div>
        <div class="col-12">
            @if (Model.MalzemeHareket.Id != 0)
            {
                <button type="submit" class="btn btn-primary" style="width:150px">Güncelle</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary" style="width:150px">Kaydet</button>
            }
            <a asp-controller="MalzemeHareket" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Listeye Dön
            </a>
        </div>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });
    </script>
}
