@using System.DirectoryServices.AccountManagement;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jenga.Web</title>
    

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />

    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
    
    @*<link rel="stylesheet" href="~/icon/bootstrap-icons-1.10.5/bootstrap-icons.css" />*@
    <link rel="stylesheet" href="~/icon/bootstrap-icons-1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/toastr/toastr.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/animate/animate.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/lib/DataTables/datatables.min.css" />
    <base href="~/" />
</head>
<body>
    <div id="main" style="margin-left: 300px;">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary ">

                <div class="container-fluid">
                    @*menu icon*@
                    <div class="me-4 change" onclick="openCloseSideBar(this)">
                        <div class="bar1"></div>
                        <div class="bar2"></div>
                        <div class="bar3"></div>
                    </div>
                    @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/home/jenga-logo.png" alt="Jenga" width="30" height="30" /> Jenga.Web</a>*@
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Kullanım Koşulları</a>
                            </li>
                        </ul>
                        <p class="nav navbar-text">Hoş Geldiniz, 
                           
                            @{
                                // anywhere before needed in cshtml file or view
                                var context = new PrincipalContext(ContextType.Domain);
                                var principal = UserPrincipal.FindByIdentity(context, User.Identity?.Name);
                            }
                            @principal!
                        </p>
                    </div>
                </div>
            </nav>
            @*SideBar*@
            <div id="mySidebar" class="sidebar bg-primary text-light" style="width: 300px;">
                <div style="width: 300px;">
                    <h3 class="menuheader">
                        @*<i class="bi bi-chat-right-text-fill"></i>*@
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/home/jenga-3.png" alt="Jenga" width="50" height="50" /> Jenga.Web</a>
                        @*JENGA|<strong>Menu</strong>*@
                    </h3>
                    <hr>
                    <ul id="menu" class="list">
                    </ul>
                </div>
            </div>
        </header>
        <div class="container shadow">
            <main role="main" class="pb-3">
                <partial name="_Notification" />
                @RenderBody()
                <hr></hr>
            </main>
        </div>

        <footer class="border-top footer text-muted bg-primary">
            <div class="container">
                &copy; 2023 - Jenga.Web By Bilgi|<strong>Sistem</strong>™ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script type="text/javascript" src="~/lib/DataTables/datatables.min.js"></script>
    <script type="text/javascript" src="~/js/menuTree.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
