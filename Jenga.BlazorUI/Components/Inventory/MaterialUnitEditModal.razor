@using Jenga.Models.Inventory

@if (IsOpen)
{
    <div class="modal show" tabindex="-1" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Birim Düzenle</h5>
                    <button type="button" class="close" @onclick="OnClose" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>Birim Adı</label>
                        <input class="form-control" @bind="MaterialUnit!.Name" required />
                    </div>
                    <div class="mb-2">
                        <label>Sembol</label>
                        <input class="form-control" @bind="MaterialUnit!.Symbol" />
                    </div>
                    <div class="mb-2">
                        <label>Açıklama</label>
                        <textarea class="form-control" @bind="MaterialUnit!.Aciklama" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="OnSave">Kaydet</button>
                    <button class="btn btn-secondary" @onclick="OnClose">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public MaterialUnit? MaterialUnit { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}