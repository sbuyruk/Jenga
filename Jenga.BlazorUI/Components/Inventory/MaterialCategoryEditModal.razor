@using Jenga.Models.Inventory

@if (IsOpen)
{
    <div class="modal show" tabindex="-1" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kategori Düzenle</h5>
                    <button type="button" class="close" @onclick="OnClose" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>Ad</label>
                        <input class="form-control" @bind="Category.CategoryName" />
                    </div>
                    <div class="mb-2">
                        <label>Açıklama</label>
                        <input class="form-control" @bind="Category.Aciklama" />
                    </div>
                    <div class="mb-2">
                        <label>Üst Kategori</label>
                        <select class="form-select form-control" @bind="Category.ParentCategoryId">
                            <option value="">Seçiniz</option>
                            @foreach (var parent in ParentCategories)
                            {
                                <option value="@parent.Id">@parent.CategoryName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="OnSave">Kaydet</button>
                    <button class="btn btn-secondary" @onclick="OnClose">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public MaterialCategory? Category { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    [Parameter] public List<MaterialCategory> ParentCategories { get; set; } = new();
}