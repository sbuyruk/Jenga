@using Jenga.Models.Inventory

@if (IsOpen)
{
    <div class="modal-backdrop fade show" style="z-index:1055"></div>
    <div class="modal show" tabindex="-1" style="display: block; z-index:1060;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Marka Düzenle</h5>
                    <button type="button" class="close" @onclick="OnClose" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>Ad</label>
                        <input class="form-control" @bind="Brand.BrandName" />
                    </div>
                    <div class="mb-2">
                        <label>Kategori</label>
                        <select class="form-select" @bind="Brand.CategoryId">
                            <option value="">Kategori Seçiniz</option>
                            @foreach (var cat in Categories)
                            {
                                <option value="@cat.Id">@cat.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-2">
                        <label>Açıklama</label>
                        <input class="form-control" @bind="Brand.Aciklama" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="OnSave">Kaydet</button>
                    <button class="btn btn-secondary" @onclick="OnClose">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public MaterialBrand Brand { get; set; }
    [Parameter] public List<MaterialCategory> Categories { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}