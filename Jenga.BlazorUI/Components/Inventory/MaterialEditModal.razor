@using Jenga.Models.Inventory

@if (IsOpen)
{
    <div class="modal show" tabindex="-1" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Malzeme Düzenle</h5>
                    <button type="button" class="close" @onclick="OnClose" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>Ad</label>
                        <input class="form-control" @bind="Material.MaterialName" />
                    </div>
                    <div class="mb-2">
                        <label>Kategori ID</label>
                        <input class="form-control" @bind="Material.CategoryId" type="number" />
                    </div>
                    <div class="mb-2">
                        <label>Marka ID</label>
                        <input class="form-control" @bind="Material.BrandId" type="number" />
                    </div>
                    <div class="mb-2">
                        <label>Model ID</label>
                        <input class="form-control" @bind="Material.ModelId" type="number" />
                    </div>
                    <div class="mb-2">
                        <label>Birim</label>
                        <input class="form-control" @bind="Material.Unit" />
                    </div>
                    <div class="mb-2">
                        <label>Varlık mı?</label>
                        <input type="checkbox" class="form-check-input" @bind="Material.IsAsset" />
                    </div>
                    <div class="mb-2">
                        <label>Açıklama</label>
                        <input class="form-control" @bind="Material.Aciklama" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="OnSave">Kaydet</button>
                    <button class="btn btn-secondary" @onclick="OnClose">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public Material Material { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}