@using Jenga.Models.Inventory
@using Jenga.Utility.Toast
@using Jenga.DataAccess.Services.Inventory

@inject IToastService ToastService
@inject IMaterialService MaterialService
@inject IMaterialBrandService MaterialBrandService
@inject IMaterialModelService MaterialModelService
@inject IMaterialUnitService MaterialUnitService

@if (IsOpen)
{
    <div class="modal-backdrop fade show" style="z-index:1055"></div>
    <div class="modal show" tabindex="-1" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((editing?.Id ?? 0) == 0 ? "Yeni Malzeme Tanımlama" : "Malzeme Düzenle")</h5>
                    <button type="button" class="btn-close" @onclick="Close" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label class="form-label">Ad</label>
                        <input class="form-control" @bind="editing.MaterialName" />
                        @if (Errors.TryGetValue(nameof(Material.MaterialName), out var errName))
                        {
                            <div class="text-danger small mt-1">@errName</div>
                        }
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Kategori</label>
                        <select class="form-select" @bind="editing.CategoryId">
                            <option value="0">Seçiniz</option>
                            @foreach (var cat in Categories)
                            {
                                <option value="@cat.Id">@cat.CategoryName</option>
                            }
                        </select>
                        @if (Errors.TryGetValue(nameof(Material.CategoryId), out var errCat))
                        {
                            <div class="text-danger small mt-1">@errCat</div>
                        }
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Marka</label>
                        <div class="input-group">
                            <select class="form-select" @bind="editing.BrandId">
                                <option value="0">Seçiniz</option>
                                @foreach (var brand in Brands)
                                {
                                    <option value="@brand.Id">@brand.BrandName</option>
                                }
                            </select>
                            <button class="btn btn-outline-primary d-flex align-items-center" type="button" style="min-width:140px" @onclick="OpenBrandModal" aria-label="Yeni Marka">
                                <i class="bi bi-plus-square me-2" aria-hidden="true"></i>
                                Yeni Marka
                            </button>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Model</label>
                        <div class="input-group">
                            <select class="form-select" @bind="editing.ModelId">
                                <option value="0">Seçiniz</option>
                                @foreach (var model in Models)
                                {
                                    <option value="@model.Id">@model.ModelName</option>
                                }
                            </select>
                            <button class="btn btn-outline-primary d-flex align-items-center" type="button" style="min-width:140px" @onclick="OpenModelModal" aria-label="Yeni Model">
                                <i class="bi bi-plus-square me-2" aria-hidden="true"></i>
                                Yeni Model
                            </button>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Birim</label>
                        <div class="input-group">
                            <select class="form-select" @bind="editing.MaterialUnitId">
                                <option value="0">Birim seçiniz</option>
                                @foreach (var unit in MaterialUnits)
                                {
                                    <option value="@unit.Id">@unit.Name (@unit.Symbol)</option>
                                }
                            </select>
                            <button class="btn btn-outline-primary d-flex align-items-center" type="button" style="min-width:140px" @onclick="OpenUnitModal" aria-label="Yeni Birim">
                                <i class="bi bi-plus-square me-2" aria-hidden="true"></i>
                                Yeni Birim
                            </button>
                        </div>
                        @if (Errors.TryGetValue(nameof(Material.MaterialUnitId), out var errUnit))
                        {
                            <div class="text-danger small mt-1">@errUnit</div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kritik Stok Miktarı</label>
                        <input class="form-control" type="number" @bind="editing.CriticalStock" />
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="isAsset" @bind="editing.IsAsset" />
                        <label class="form-check-label" for="isAsset">Varlık mı?</label>
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Açıklama</label>
                        <textarea class="form-control" rows="3" @bind="editing.Aciklama"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="SaveAsync" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        Kaydet
                    </button>
                    <button class="btn btn-secondary" @onclick="Close" disabled="@isSaving">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

<MaterialBrandEditModal Brand="brandToEdit" Categories="Categories" IsOpen="isBrandModalOpen" OnSave="HandleBrandSave" OnClose="CloseBrandModal" />
<MaterialModelEditModal Model="modelToEdit" Brands="Brands" IsOpen="isModelModalOpen" OnSave="HandleModelSave" OnClose="CloseModelModal" />
<MaterialUnitEditModal MaterialUnit="unitToEdit" IsOpen="isUnitModalOpen" OnSave="HandleUnitSave" OnClose="CloseUnitModal" />

@code {
    [Parameter] public Material? Material { get; set; }
    [Parameter] public List<MaterialUnit> MaterialUnits { get; set; } = new();
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }    // parent persists the Material
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public List<MaterialCategory> Categories { get; set; } = new();
    [Parameter] public List<MaterialBrand> Brands { get; set; } = new();
    [Parameter] public List<MaterialModel> Models { get; set; } = new();

    private Material editing = new();
    private readonly Dictionary<string, string> Errors = new();
    private bool isSaving;

    // brand modal state
    private bool isBrandModalOpen;
    private MaterialBrand brandToEdit = new();
    // model modal state
    private bool isModelModalOpen;
    private MaterialModel modelToEdit = new();
    // unit modal state
    private bool isUnitModalOpen;
    private MaterialUnit unitToEdit = new();

    protected override void OnParametersSet()
    {
        // create shallow copy of incoming Material (avoid mutating parent until save)
        if (Material != null)
        {
            editing = new Material
            {
                Id = Material.Id,
                MaterialName = Material.MaterialName,
                CategoryId = Material.CategoryId,
                BrandId = Material.BrandId,
                ModelId = Material.ModelId,
                MaterialUnitId = Material.MaterialUnitId,
                CriticalStock = Material.CriticalStock,
                IsAsset = Material.IsAsset,
                Aciklama = Material.Aciklama
            };
        }
        else
        {
            editing = new Material();
        }
        Errors.Clear();
    }

    private void Close()
    {
        Errors.Clear();
        OnClose.InvokeAsync();
    }

    private bool Validate()
    {
        Errors.Clear();

        if (string.IsNullOrWhiteSpace(editing.MaterialName))
            Errors[nameof(Material.MaterialName)] = "Malzeme adı gerekli.";

        if (editing.CategoryId <= 0)
            Errors[nameof(Material.CategoryId)] = "Kategori seçiniz.";

        if (editing.MaterialUnitId <= 0)
            Errors[nameof(Material.MaterialUnitId)] = "Birim seçiniz.";

        return Errors.Count == 0;
    }

    private async Task SaveAsync()
    {
        if (isSaving) return;

        if (!Validate())
        {
            ToastService.ShowToast("Lütfen formu düzeltiniz.", ToastType.Warning, 2500);
            return;
        }

        isSaving = true;

        try
        {
            var name = (editing.MaterialName ?? string.Empty).Trim();

            // server-side duplicate check via MaterialService
            var exists = await MaterialService.ExistsByNameAsync(name, editing.Id);
            if (exists)
            {
                Errors[nameof(Material.MaterialName)] = "Aynı isimde başka bir malzeme mevcut.";
                ToastService.ShowToast(Errors[nameof(Material.MaterialName)], ToastType.Warning, 3500);
                return;
            }

            // copy validated values back to parent Material instance so parent OnSave can persist
            if (Material != null)
            {
                Material.MaterialName = name;
                Material.CategoryId = editing.CategoryId;
                Material.BrandId = editing.BrandId;
                Material.ModelId = editing.ModelId;
                Material.MaterialUnitId = editing.MaterialUnitId;
                Material.CriticalStock = editing.CriticalStock;
                Material.IsAsset = editing.IsAsset;
                Material.Aciklama = editing.Aciklama;
            }

            await OnSave.InvokeAsync();
            ToastService.ShowToast("Malzeme kaydedildi.", ToastType.Success, 2000);
        }
        catch (Exception ex)
        {
            ToastService.ShowToast($"Kaydetme sırasında hata: {ex.Message}", ToastType.Error, 5000);
        }
        finally
        {
            isSaving = false;
        }
    }

    private void OpenBrandModal()
    {
        brandToEdit = new MaterialBrand();
        isBrandModalOpen = true;
    }

    private void CloseBrandModal()
    {
        isBrandModalOpen = false;
    }

    private async Task HandleBrandSave()
    {
        try
        {
            // save new brand via service
            var ok = await MaterialBrandService.AddAsync(brandToEdit);
            if (ok)
            {
                // add to local list and select it
                Brands.Add(brandToEdit);
                editing.BrandId = brandToEdit.Id;
                ToastService.ShowToast("Marka kaydedildi.", ToastType.Success, 2000);
            }
            else
            {
                ToastService.ShowToast("Marka kaydedilemedi.", ToastType.Error, 3000);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowToast($"Marka kaydetme hatası: {ex.Message}", ToastType.Error, 4000);
        }
        finally
        {
            isBrandModalOpen = false;
            StateHasChanged();
        }
    }

    private void OpenModelModal()
    {
        modelToEdit = new MaterialModel();
        // if a brand already selected in editing, prefill it for the model
        if (editing.BrandId.HasValue && editing.BrandId.Value > 0)
            modelToEdit.BrandId = editing.BrandId.Value;
        isModelModalOpen = true;
    }

    private void CloseModelModal()
    {
        isModelModalOpen = false;
    }

    private async Task HandleModelSave()
    {
        try
        {
            var ok = await MaterialModelService.AddAsync(modelToEdit);
            if (ok)
            {
                Models.Add(modelToEdit);
                editing.ModelId = modelToEdit.Id;
                ToastService.ShowToast("Model kaydedildi.", ToastType.Success, 2000);
            }
            else
            {
                ToastService.ShowToast("Model kaydedilemedi.", ToastType.Error, 3000);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowToast($"Model kaydetme hatası: {ex.Message}", ToastType.Error, 4000);
        }
        finally
        {
            isModelModalOpen = false;
            StateHasChanged();
        }
    }

    private void OpenUnitModal()
    {
        unitToEdit = new MaterialUnit();
        isUnitModalOpen = true;
    }

    private void CloseUnitModal()
    {
        isUnitModalOpen = false;
    }

    private async Task HandleUnitSave()
    {
        try
        {
            var ok = await MaterialUnitService.AddAsync(unitToEdit);
            if (ok)
            {
                MaterialUnits.Add(unitToEdit);
                editing.MaterialUnitId = unitToEdit.Id;
                ToastService.ShowToast("Birim kaydedildi.", ToastType.Success, 2000);
            }
            else
            {
                ToastService.ShowToast("Birim kaydedilemedi.", ToastType.Error, 3000);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowToast($"Birim kaydetme hatası: {ex.Message}", ToastType.Error, 4000);
        }
        finally
        {
            isUnitModalOpen = false;
            StateHasChanged();
        }
    }
}