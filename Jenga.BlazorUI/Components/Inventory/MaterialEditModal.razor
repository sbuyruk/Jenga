@using Jenga.Models.Inventory

@if (IsOpen)
{
    <div class="modal show" tabindex="-1" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Malzeme Düzenle</h5>
                    <button type="button" class="close" @onclick="OnClose" aria-label="Kapat">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>Ad</label>
                        <input class="form-control" @bind="Material.MaterialName" />
                    </div>
                    <div class="mb-2">
                        <label>Kategori</label>
                        <select class="form-select form-control" @bind="Material.CategoryId">
                            <option value="">Seçiniz</option>
                            @foreach (var cat in Categories)
                            {
                                <option value="@cat.Id">@cat.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-2">
                        <label>Marka</label>
                        <select class="form-select form-control" @bind="Material.BrandId">
                            <option value="">Seçiniz</option>
                            @foreach (var brand in Brands)
                            {
                                <option value="@brand.Id">@brand.BrandName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-2">
                        <label>Model</label>
                        <select class="form-select form-control" @bind="Material.ModelId">
                            <option value="">Seçiniz</option>
                            @foreach (var model in Models)
                            {
                                <option value="@model.Id">@model.ModelName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-2">
                        <label>Birim</label>
                        <select class="form-select" @bind="Material!.MaterialUnitId">
                            <option value="">Birim seçiniz</option>
                            @foreach (var unit in MaterialUnits)
                            {
                                <option value="@unit.Id">@unit.Name (@unit.Symbol)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-2">
                        <label>Varlık mı?</label>
                        <input type="checkbox" class="form-check-input" @bind="Material.IsAsset" />
                    </div>
                    <div class="mb-2">
                        <label>Açıklama</label>
                        <input class="form-control" @bind="Material.Aciklama" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="OnSave">Kaydet</button>
                    <button class="btn btn-secondary" @onclick="OnClose">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public Material Material { get; set; }
    [Parameter] public List<MaterialUnit> MaterialUnits { get; set; } = new();
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public List<MaterialCategory> Categories { get; set; } = new();
    [Parameter] public List<MaterialBrand> Brands { get; set; } = new();
    [Parameter] public List<MaterialModel> Models { get; set; } = new();
}